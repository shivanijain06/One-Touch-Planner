{{!-- form for adding a new task for a particular event --}}
<div id="modal2" class="modal">
  <div class="modal-content">
    <form id="taskForm">
      <div class="row">
        <h2 class="center blackUnderline">Add a new <span class="teal-text text-lighten-2 blackUnderline">Task</span> <i
            id="taskIcon" class="fas fa-tasks fa-sm"></i></h2>

        <div class="input-field col s12">
          <input placeholder="Task Name" id="newTaskName" type="text" class="validate">
          <label for="newTaskName">Description: <i class="red-text text-darken-4">*required</i></label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input placeholder="Not Important, Important, Urgent" id="newTaskImportance" type="text" class="validate">
          <label for="newTaskImportance">Task Importance: <i class="red-text text-darken-4">*required</i></label> <br>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <select value="empty" id="eventNameTask" required>
            <option disabled selected>Task for Which Event?</option>
          </select>
          <label for="eventNameTask">Which event is this task for? <i
              class="red-text text-darken-4">*required</i></label> <br>
        </div>
      </div>

      <button id="submitNewTask" class="btn waves-effect waves-light btn teal lighten-2 center-align">Submit Task</button>
    </form>
  </div>
</div>

{{!-- modal form for gathering info about an event before adding to database --}}
<div id="modal1" class="modal surveyForm">
  <div class="modal-content">
    <div id="surveyBorder">
      <form id="createEventForm">
        <div class="row">
          <h2 class="center blackUnderline">Event <span class="teal-text text-lighten-2 blackUnderline">Details</span><i
              id="pencilIcon" class="fas fa-pencil-alt fa-xs"></i></h2>
          <div class="input-field col s12">
            <input placeholder="Tommy's 2nd Birthday" id="eventName" type="text" class="validate eventInput" required>
            <label for="eventName">Name of Event <i class="red-text text-darken-4">*required</i></label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input placeholder="May 4, 2019" type="text" class="datepicker eventInput" id="eventDate"
              class="validate eventInput" required>
            <label for="eventDate">Date of Event <i class="red-text text-darken-4">*required</i></label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <select value="empty" id="eventType" required class="eventSelect">
              <option disabled selected>Select the Event Type</option>
              <option value="Birthday">Birthday Party</option>
              <option value="Anniversary">Anniversary</option>
              <option value="Work Party">Work Party</option>
              <option value="Meetup">Meetup</option>
              <option value="Wedding">Wedding</option>
              <option value="Other">Other</option>
            </select>
            <label for="eventType">What type of event will it be? <i
                class="red-text text-darken-4">*required</i></label>
          </div>

        </div>
        <div class="row">
          <div class="input-field col s12">
            <input placeholder="20" id="attendees" type="number" min="1" class="validate eventInput" required>
            <label for="attendees">Number of Attendees <i class="red-text text-darken-4">*required</i></label>
          </div>

        </div>

        <div class="row">
          <div class="input-field col s12">
            <select value="empty" id="timeOfDay" class="validate eventSelect" required>
              <option disabled selected>Time of Day</option>
              <option value="Brunch/Breakfast">Brunch/Breakfast</option>
              <option value="Day Time">Day Time</option>
              <option value="Night Time">Night Time</option>
              <option value="After Hours">After Hours</option>
            </select>
            <label for="timeOfDay">What time does the party begin?<i
                class="red-text text-darken-4">*required</i></label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <select value="empty" id="dress" class="eventSelect">
              <option disabled selected>Attire:</option>
              <option value="Casual">Casual</option>
              <option value="Semi-Formal">Semi-Formal</option>
              <option value="Formal">Formal</option>
              <option value="Costume/Themed">Costume/Themed</option>
            </select>
            <label for="dress">Dress Code</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <select value="empty" id="themed" class="eventSelect">
              <option disabled selected>Themed?</option>
              <option value=false>No</option>
              <option value=true>Yes</option>
            </select>
            <label for="themed">Is this a themed event? - Yes/No</label>
          </div>

        </div>

        <div class="row">
          <div class="input-field col s12">
            <select value="empty" id="food" class="eventSelect">
              <option disabled selected>Food?</option>
              <option value=false>No</option>
              <option value=true>Yes</option>
            </select>
            <label for="food">Will food be served at this event? - Yes/No</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <select value="empty" id="decorations" class="eventSelect">
              <option disabled selected>Decorations?</option>
              <option value=false>No</option>
              <option value=true>Yes</option>
            </select>
            <label for="decorations">Will you be decorating? - Yes/No</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <select value="empty" id="cake" class="eventSelect">
              <option disabled selected>Cake/Dessert?</option>
              <option value=false>No</option>
              <option value=true>Yes</option>
            </select>
            <label for="cake">Will you need cake/dessert? - Yes/No</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <select value="empty" id="alcohol" class="eventSelect">
              <option disabled selected>Alcohol?</option>
              <option value=false>No</option>
              <option value=true>Yes</option>
            </select>
            <label for="alcohol">Will you be serving alcoholic beverages? - Yes/No</label>
          </div>
        </div>
        <a id="submitSurvey" class="waves-effect waves-teal btn lighten-2"> <i
            class="center material-icons right center-align">send</i>Submit</a>
      </form>
    </div>
  </div>
</div>


